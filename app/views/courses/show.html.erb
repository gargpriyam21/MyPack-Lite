<p style="color: green"><%= notice %></p>
<b><p style="color: red"><%= alert %></p></b>

<p>
  <strong> Code: </strong>
  <%= @course.course_code %>
</p>

<p>
  <strong> Name: </strong>
  <%= @course.name %>
</p>

<p>
  <strong> Description: </strong>
  <%= @course.name %>
</p>

<p>
  <strong> Instructor: </strong>
  <%= @course.instructor_name %>
</p>

<p>
  <strong> Timings: </strong>
  <% if !@course.weekday2.nil? %>
    <%= @course.weekday1 + " " + @course.weekday2 + " during " + @course.start_time + " - " + @course.end_time + " at Room " + @course.room %>
  <% else %>
    <%= @course.weekday1 + " during " + @course.start_time + " - " + @course.end_time + " at " + @course.room %>
  <% end %>
</p>

<p>
  <strong> Capacity: </strong>
  <%= @course.capacity.to_s + " Students" %>
</p>


<p>
  <strong> Status: </strong>
  <%= @course.status %>
</p>

<div>
  <% if current_user.user_role == 'student' %>
    <% if Enrollment.where(student_id: Student.find_by_email(current_user.email).id, course_id: @course.id)[0].nil? %>
      <%= link_to "Enroll", enroll_course_path(@course) %>
    <% else %>
      <%= link_to 'Drop', drop_course_path(@course), method: :post, data: { confirm: 'Are you sure?' } %>
    <% end %>
  <% elsif current_user.user_role == 'admin' or session[:user_id] == @course.instructor_id %>
    <%= link_to "Edit this course", edit_course_path(@course) %>
    <%= button_to "Destroy this course", @course, method: :delete %>
  <% end %>
  <%# if session[:user_id] == @course.instructor_id %>
  <%#= link_to "Back to my courses", instructor_courses_path %>
  <%# end %>
  <%= link_to "Back", :back %> <br><br>
  <%= link_to "All Courses", courses_path %>

</div>
