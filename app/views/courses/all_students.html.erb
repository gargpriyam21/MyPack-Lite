<h1>Students</h1>

<table>
  <thead>
  <tr>
    <th>Student Code</th>
    <th>Student Name</th>
    <th>Email</th>
    <th>Date of Birth</th>
    <th>Phone Number</th>
    <th>Major</th>
    <th>Status</th>
  </tr>
  </thead>

  <tbody>
  <% @students.each do |student| %>
    <tr>
      <td><%= student.student_id %></td>
      <td><%= student.name %></td>
      <td><%= student.email %></td>
      <td><%= student.date_of_birth %></td>
      <td><%= student.phone_number %></td>
      <td><%= student.major %></td>
      <td>Enrolled</td>
    </tr>
  <% end %>

  <% @students_wait.each do |student| %>
    <tr>
      <td><%= student.student_id %></td>
      <td><%= student.name %></td>
      <td><%= student.email %></td>
      <td><%= student.date_of_birth %></td>
      <td><%= student.phone_number %></td>
      <td><%= student.major %></td>
      <td>Waitlisted</td>
    </tr>
  <% end %>

  </tbody>
</table>
<div>
  <br>

  <%= link_to "All Courses", courses_path %><br><br>
  <%= link_to "Enroll Student", new_enrollment_path %> <br><br>
  <%= link_to "Back", :back %>
</div>
<br>
