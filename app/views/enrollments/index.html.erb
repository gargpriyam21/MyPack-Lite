<h1>Enrollments</h1>

<table>
  <thead>
  <tr>
    <th> Student ID</th>
    <th> Course Code</th>
    <th colspan="1"></th>
  </tr>
  </thead>
  <tbody>
  <% @enrollments.each do |enrollment| %>
    <tr>
      <td><%= enrollment.student_code %></td>
      <td><%= enrollment.course_code %></td>
      <td> <%= link_to "Show this enrollment", enrollment %></td>
  <% end %>
  </tr>
  </tbody>
</table>

<br>
<% if current_user.user_role == 'admin' %>
  <%= link_to "All Enrollments", all_enrollments_path %>
<% end %>
<br><br>
<%= link_to "New enrollment", new_enrollment_path %>

